@model AppStore.Models.Product

<div class="direction-rtl">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-heading">
                <div class="panel-heading bg">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-lg-10">
                                <img class="img-responsive" src="http://placehold.it/100x70">
                            </div>
                            <div class="col-lg-2">
                                <h1 class="glyphicon  text-right text-white m-0 p-0">برنامه</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="col-lg-3">
                                <button type="button" class="btn btn-install btn-block">
                                    <h3>نصب</h3>
                                </button>
                            </div>

                        </div>

                        <div class="col-lg-2">
                            <h1 class="product-name"><strong>@Model.Name</strong></h1><h4><small>@Model.Name</small></h4>
                        </div>
                        <div class="col-lg-2">
                            <img class="img-responsive" src="~/Content/images/iconShowDetelis/app-5.png" width="185" height="185">
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3">

                            <div class="testimonial w-100 h-100  p-3 text-center">
                                <button class="btn bouton-image icondownload"></button>
                                <div class="separator">&nbsp;</div>
                                <h4 class="message text-center text-gray">10M</h4>
                            </div>
                        </div>
                        <div class="col-lg-3">

                            <div class="testimonial w-100 h-100  p-3 text-center">
                                <button class="btn bouton-image iconSize"></button>
                                <div class="separator">&nbsp;</div>
                                <h4 class="message text-center text-gray">22,000,000</h4>
                            </div>
                        </div>
                        <div class="col-lg-3">

                            <div class="testimonial w-100 h-100  p-3 text-center">
                                <button class="btn bouton-image iconCountComment"></button>
                                <div class="separator">&nbsp;</div>
                                <h4 class="message text-center text-gray">4.8</h4>
                            </div>
                        </div>
                        <div class="col-lg-3">

                            <div class="testimonial w-100 h-100  p-3 text-center">
                                <button class="btn bouton-image iconShareing"></button>
                                <div class="separator">&nbsp;</div>
                                <h4 class="message text-center text-gray">شبکه های اجتماعی</h4>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1" id="logout">

                            <div>

                                <div class="tab-content">
                                    <div class="tab-pane active" id="comments-logout">
                                        <ul class="media-list">
                                            <li class="media">
                                                <div class="media-body ">
                                                    <div class="well well-lg lang-bar ">
                                                        <div class="text-lg-center">
                                                            <img src="~/Content/images/Unlike.jpg" class="disabled list-inline" />
                                                            <img src="~/Content/images/Unlike.jpg" class="disabled list-inline" />
                                                            <img src="~/Content/images/Unlike.jpg" class="disabled list-inline" />
                                                            <img src="~/Content/images/like.jpg" class="disabled list-inline" />
                                                            <img src="~/Content/images/like.jpg" class="disabled list-inline" />
                                                        </div>
                                                        <p class="media-comment  text-lg-center text-capitalize">
                                                            <strong>امتیاز من به این برنامه</strong>
                                                        </p>
                                                    </div>
                                                </div>

                                            </li>
                                            <li class="media">
                                                <a class="pull-right" href="#">
                                                    <img class="media-object img-circle" src="~/Content/images/Users/User2.jpg" alt="profile">
                                                </a>
                                                <div class="media-body">
                                                    <div class="well well-lg" style="position: relative">
                                                        <div class="left-corner"></div>
                                                        <div class="right-corner"></div>
                                                        <div class="text-lg-center">
                                                            <button class="btn bouton-image Unlike  list-inline"></button>
                                                            <button class="btn bouton-image Unlike  list-inline"></button>
                                                            <button class="btn bouton-image Unlike  list-inline"></button>
                                                            <button class="btn bouton-image like list-inline"></button>
                                                            <button class="btn bouton-image like list-inline"></button>
                                                        </div>
                                                        <h4 class="media-heading text-uppercase reviews">حسن ایوبی</h4>
                                                        <ul class="media-date text-uppercase reviews list-inline">
                                                            <li class="dd">22</li>
                                                            <li class="mm">فروردین</li>
                                                            <li class="aaaa">1398</li>
                                                        </ul>
                                                        <p class="media-comment">
                                                            
                                                        </p>

                                                        <a class="btn btn-info btn-circle text-uppercase" href="#" id="reply"><span class="glyphicon glyphicon-share-alt"></span> پاسخ</a>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="media">
                                                <a class="pull-right" href="#">
                                                    <img class="media-object img-circle" src="~/Content/images/Users/User1.jpg" alt="profile">
                                                </a>
                                                <div class="media-body">
                                                    <div class="well well-lg" style="position: relative">
                                                        <div class="left-corner"></div>
                                                        <div class="right-corner"></div>
                                                        <div class="text-lg-center">
                                                            <button class="btn bouton-image like  list-inline"></button>
                                                            <button class="btn bouton-image like  list-inline"></button>
                                                            <button class="btn bouton-image like  list-inline"></button>
                                                            <button class="btn bouton-image like list-inline"></button>
                                                            <button class="btn bouton-image like list-inline"></button>
                                                        </div>

                                                        <h4 class="media-heading text-uppercase reviews">نازنین مرادزاده</h4>
                                                        <ul class="media-date text-uppercase reviews list-inline">
                                                            <li class="dd">20</li>
                                                            <li class="mm">اسفند</li>
                                                            <li class="aaaa">1397</li>
                                                        </ul>
                                                        <p class="media-comment">
                                                            بدک نبود. میتونیست بهتر باشه. بنظرم گرافیکش خیلی ساده بود
                                                        </p>
                                                        <a class="btn btn-info btn-circle text-uppercase" href="#" id="reply"><span class="glyphicon glyphicon-share-alt"></span> پاسخ</a>
                                                        <a class="btn btn-warning btn-circle text-uppercase" data-toggle="collapse" href="#replyTwo"><span class="glyphicon glyphicon-comment"></span> 1 نظر</a>
                                                    </div>
                                                </div>

                                            </li>
                                        </ul>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">

            <div class="well well-lg lang-bar">

                <form action="#" method="post" class="form-horizontal" id="commentForm" role="form">
                    <div class="form-group">

                        <label><span class="text-right"> نظر</span></label>
                        <div class="col-sm-12">
                            <textarea class="form-control" name="addComment" id="addComment" rows="5"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span> ارسال </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>



    <hr>


</div>




