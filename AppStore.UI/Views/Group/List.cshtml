@model List<AppStore.Models.Group>

<div class="panel-body">
    @if (Model.Count == 0)
    {
        <div class="container">
            <div class="row text-center text-danger">
                <div class="col-lg-12">
                    <h1 class="text-center">گروهی یافت نشد</h1>
                </div>
            </div>
        </div>
    }
    @foreach (var item in Model)
    {
        <div class="row  well well-lg lang-bar">
            <div class="col-lg-8">
                <div class="col-lg-3">
                    <button type="button" class="btn btn-install btn-block">
                        <h3>تغییر</h3>
                    </button>
                </div>

            </div>

            <div class="col-lg-2">
                <h1 class="product-name"><strong>@item.Name</strong></h1><h4><small>@item.Type</small></h4>
            </div>
        </div>

    }
</div>